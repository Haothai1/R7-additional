<div class="modal fade" id="deleteCustomerModal-<%= customer.id %>" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Delete Customer</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete customer <%= customer.full_name %>?
      </div>
      <div class="modal-footer">
        <%= button_to 'Delete', customer, method: :delete, class: 'btn btn-danger', data: { 'bs-dismiss' => 'modal' } %>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>
