<p style="color: green"><%= notice %></p>

<%= render @customer %>

<div>
  <p><strong>Email:</strong> <%= @customer.email %></p>
  <p><strong>Phone:</strong> <%= @customer.phone %></p>
</div>

<div>
  <%= link_to "Edit", edit_customer_path(@customer), class: 'btn btn-primary' %>
  <%= link_to "Back to Customers", customers_path, class: 'btn btn-secondary' %>
  <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteCustomerModal-<%= @customer.id %>">
    Delete Customer
  </button>
</div>

<h1>Customer: <%= @customer.full_name %></h1>

<p>Email: <%= @customer.email %></p>

<h2>Orders</h2>

<% if @customer.orders.any? %>
  <table>
    <thead>
      <tr>
        <th>Product Name</th>
        <th>Product Count</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @customer.orders.each do |order| %>
        <tr>
          <td><%= order.product_name %></td>
          <td><%= order.product_count %></td>
          <td><%= link_to 'Show', order_path(order) %></td>
          <td><%= link_to 'Edit', edit_order_path(order) %></td>
          <td><%= link_to 'Delete', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No orders available.</p>
  <%= link_to 'New Order', new_order_path(@customer) %>
<% end %>

<%= link_to 'Back', customers_path %>

