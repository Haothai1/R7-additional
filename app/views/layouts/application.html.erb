<!DOCTYPE html>
<html>
  <head>
    <title>R7Additional</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%# Banner start %>
    <div class="container-fluid p-5 bg-light text-center banner-background">
      <h1>My Application</h1>
      <p>Customers</p>
    </div>
    <%# Bootstrap Alerts %>
    <% if flash[:notice] %>
    <div class="alert alert-success">
      <%= flash[:notice] %>
    </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="alert alert-danger">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%# Navbar start %>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Navbar</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="customerDropdown" role="button" data-bs-toggle="dropdown">Customers</a>
          <ul class="dropdown-menu">
            <li><%= link_to 'Customer List', customers_path, class: 'dropdown-item' %></li>
            <li><%= link_to 'New Customer', new_customer_path, class: 'dropdown-item' %></li>
          </ul>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="orderDropdown" role="button" data-bs-toggle="dropdown">Orders</a>
          <ul class="dropdown-menu">
            <li><%= link_to 'Order List', orders_path, class: 'dropdown-item' %></li>
            <li><%= link_to 'New Order', new_order_path, class: 'dropdown-item' %></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</nav>
    <%# Navbar end %>
    <div class="container-fluid">
      <%= yield %>
    </div>
  </body>
</html>
